<p id="notice"></p>

  <div class='container px-3 px-sm-3'>
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>error prohibited this obj from being saved:
        <% @genre.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
    <% end %>
  </div>

  <div class='container px-3 px-sm-3'>
    <div class='row'>
        <div>
          <h4 style="background-color: #d3d3d3; display:inline;">　ジャンル一覧・追加　</h4>
            <%= form_with url: "/admin/genres", local:true do |f| %>
              <br>ジャンル名
                <span style="margin-left:50px"><%= f.text_field :name %></span>
                <span style="margin-left:50px"><%= f.submit '新規登録', class: "btn btn-success" %></span>
              </br>
            <% end %>

          <br></br>
          <!--↑　隙間明け-->

            <table class="table">


                  <div class="p-3 mb-2 bg-light text-dark">　　　　ジャンル　</div>

              <tbody>
                <% @genres.each do |genre| %>
                  <tr>
                    <td><%= genre.name %></td>
                    <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
                  </tr>
                <%end%>
              </tbody>

            </table>
        </div>
    </div>
  </div>
