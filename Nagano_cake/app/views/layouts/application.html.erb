<!DOCTYPE html>
<html class="h-100">
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="h-100">
    <header class="border-bottom">
         <nav class="navbar navbar-expand-lg navbar-dark bg-white">
        <div class="container">
          <%= link_to "LOGO", public_root_path, class:"btn btn-outline-dark"  %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" style="display:flex; flex-flow: column;">
            <div style="margin: 0 0 0 auto;">
            <ul class="navbar-nav ml-auto">
                <% if customer_signed_in? %>
                  <li>
                   <th>ようこそ、<%= current_customer.last_name %>さん！</th>
                  </li>

                  <li>
                    <%= link_to "マイページ", public_customers_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "商品一覧", public_items_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "カート", public_cart_items_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-dark"%>
                  </li>
                <% elsif admin_signed_in? %>

                  <li>
                    <%= link_to "商品一覧", public_items_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "注文履歴", public_orders_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark" %>
                  </li>

                <% else %>
                  <li>
                    <%= link_to "About", public_about_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "商品一覧", public_items_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-dark" %>
                  </li>
                <% end %>
            </ul>
            </div>
            <% if admin_signed_in? %>
            <div style="margin: 0 0 0 auto;">
              <%= form_tag do %>
              <%= text_field_tag :search %>
              <%= submit_tag 'Search', :name => nil %>
            　<% end %>
            </div>
            <% end %>
          </div>
        </div>
      </nav>
    <p><%= notice %></p>
    </header>
    <main class="h-75">
    <%= yield %>
    </main>
    <footer>
     <div class="w-100 border border-primary-black">
     </div>
    </footer>
  </body>
</html>
