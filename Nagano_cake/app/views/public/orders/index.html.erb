<!--タイトル-->
<div class="container">
  <div class="row">

    <div class="col-md-2 offset-md-1 bg-light d-flex align-items-center justify-content-center">
      <h6>注文履歴一覧</h6>
    </div>

  </div>
</div>
<!--/タイトル-->

<br>

<!--注文履歴一覧の表-->
<div class="container">
  <div class="row">

    <div class="col-md-12">
      <table border="2" class="table border border-dark">

            <tr>
                <th scope="row", style="width: 10%" class="bg-light">注文日</th>
                <th scope="row", style="width: 40%" class="bg-light">配送先</th>
                <th scope="row", style="width: 20%" class="bg-light">注文商品</th>
                <th scope="row", style="width: 10%" class="bg-light">支払金額</th>
                <th scope="row", style="width: 10%" class="bg-light">ステータス</th>
                <th scope="row", style="width: 10%" class="bg-light">注文詳細</th>
            </tr>

            <% @orders.each do |order| %>
              <tr>
                <td class="align-middle"><%= order.created_at.to_s(:datetime_jp) %></td>
                <td>
                  <p style="height: 0.3rem"><%= order.postal_code %></p>
                  <p style="height: 0.3rem"><%= order.address %></p>
                  <p style="height: 0.3rem"><%= order.name %></p>
                </td>
                <td class="align-middle">
                  <% @item.each do |item| %>
                    <p style="height: 0.3rem"><%= item.name %></p>
                  <% end %>
                </td>
                <td class="align-middle"><%= order.billing_amount.to_s(:delimited) %></td>
                <td class="align-middle"><%= order.status %></td>
                <td class="align-middle">
                  <%= link_to public_order_path(order.id) do %>
                  <button button type="button" class="btn btn-primary btn-sm">
                    <strong>表示する</strong>
                  </button>
                  <% end %>
                </td>
              </tr>
            <% end %>
    </div>

</div>
<!--/注文履歴一覧の表-->