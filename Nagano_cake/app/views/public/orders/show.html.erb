<!--タイトル-->
<div class="container">
  <div class="row">

    <div class="col-md-2 offset-md-1 bg-light d-flex align-items-center justify-content-center">
      <h6>注文履歴詳細</h6>
    </div>

  </div>
</div>
<!--/タイトル-->

<br>

<!--注文概要の表-->
<div class="container">
  <div class="row">

    <!--注文商品の表-->
    <div class="col-md-6">
      <h6>注文情報</h6>
      <table border="2" class="table bordered border-dark">

        <tr>
          <th style="width: 20%" class="bg-light">注文日</th>
          <td><%= @order.created_at.to_s(:datetime_jp) %></td>
        </tr>

        <tr>
          <th style="width: 20%" class="bg-light">配送先</th>
          <td>
            <span>
              〒<%= @order.postal_code %>
            </span>
            <span>
              <%= @order.address %>
            </span>
            <p style="height: 0.3rem"><%= @order.name %></p>
          </td>
        </tr>

        <tr>
          <th style="width: 20%" class="bg-light">支払方法</th>
          <td><%= @order.payment %></td>
        </tr>

        <tr>
          <th style="width: 20%" class="bg-light">入金確認</th>
          <td><%= @order.status %></td>
        </tr>

      </table>
    </div>
    <!--/注文商品の表-->

    <!--代金の表-->
    <div class="col-md-3">

      <h6>請求情報</h6>
      <table border="2" class="table bordered border-dark">

        <tr>
          <th style="width: 50%" class="bg-light">商品合計</th>
          <td><%= (@order.billing_amount - 800).to_s(:delimited) %></td>
        </tr>

        <tr>
          <th style="width: 50%" class="bg-light">配送料</th>
          <td><%= 800 %></td>
        </tr>

        <tr>
          <th style="width: 50%" class="bg-light">請求額</th>
          <td><%= @order.billing_amount.to_s(:delimited) %></td>
        </tr>

      </table>
    </div>
    <!--/代金の表-->

  </div>
</div>
<!--/注文概要の表-->

<!--注文商品の表-->
<div class="container">
  <div class="row">
    <div class="col-md-6">

        <h6>注文内容</h6>
        <table border="2" class="table bordered border-dark">

            <tr>
              <th style="width: 60%" class="bg-light">商品</th>
              <th style="width: 20%" class="bg-light">単価（税込）</th>
              <th style="width: 10%" class="bg-light">個数</th>
              <th style="width: 10%" class="bg-light">小計</th>
            </tr>

            <% @order_detail.each do |order_detail| %>
            <tr>
              <td lass="align-middle"><%= order_detail.item.name %></td>
              <td lass="align-middle"><%= order_detail.price_on_order %></td>
              <td lass="align-middle"><%= order_detail.item_quantity %></td>
              <td lass="align-middle"><%= order_detail.price_on_order * order_detail.item_quantity %></td>
            </tr>
            <% end %>

        </table>

    </div>
  </div>
</div>
<!--/注文商品の表-->

