<div class='container px-5 px-sm-0'>
  <br> </br>
  <b><font size="5">商品一覧</font></b>
  <font size="3">(全<%=@items.count %>件)</font>

    <div class="row">
      <% @items.each do |item| %>
        <div class="col-sm-3">
          <%= link_to public_item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :size => '150x100' %>

            <div>
              <font size="2">
                <%= item.name %>
              </font>
            </div>

            <div>
              <font size="2">
                ￥<%= (item.price*1.08).round.to_s(:delimited) %>(税込)
              </font>
            </div>

          <br> </br>

          <%end%>
        </div>
      <%end%>

        <div class="col-md-8 offset-md-1">
          <br><%= paginate @items %></br>
        </div>
    </div>
</div>
