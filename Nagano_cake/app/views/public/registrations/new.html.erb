<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label '名前（姓）' %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label '（名）' %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>


  <div class="field">
    <%= f.label 'フリガナ（セイ）' %><br />
    <%= f.text_field :last_name_ruby, autofocus: true, autocomplete: "last_name_ruby" %>
  </div>

  <div class="field">
    <%= f.label '（メイ）' %><br />
    <%= f.text_field :first_name_ruby, autofocus: true, autocomplete: "first_name_ruby" %>
  </div>

  <div class="field">
    <%= f.label 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label '郵便番号（ハイフンなし）' %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label '住所' %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label '電話番号（ハイフンなし）' %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録",class: "btn btn-outline-success" %>
  </div>
<% end %>


