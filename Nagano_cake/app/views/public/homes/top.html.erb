<%# 新着4件 %>
<div class='container px-5 px-sm-0'>
  <div class="mb-4">
    <b><font size="5">新着商品</font></b>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-3 mb-4">
        <%= link_to public_item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :size => '150x100' %>

        <div class="mb-2">
          <font size="2">
            <%= item.name %>
          </font>
        </div>

        <div class="mb-4">
          <font size="2">
            ￥<%= (item.price*1.08).round.to_s(:delimited) %>(税込)
          </font>
        </div>
        <%end%>
      </div>
    <%end%>
  </div>

  <div class="mb-4" align=right>
    <p><%= link_to "全ての商品を見る＞", public_items_path  %></p>
  </div>

</div>




