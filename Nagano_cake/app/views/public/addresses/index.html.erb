<p id="notice"

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

     <h1>配送先登録</h1>
     <%= form_with model:@new_address, url: public_addresses_path, local:true do |f| %>

     <h4>郵便番号（ハイフンなし）</h4>
     <%= f.text_field :postal_code %>
     <h4>住所</h4>
     <%= f.text_field :address %>
     <h4>宛名</h4>
     <%= f.text_field :name %>

     <%=  f.submit '新規登録' %>

     <% end %>


    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

     <h1>配送先一覧</h1>

     <% @addresses.each do |address| %>
       <%= address.postal_code %>
       <%= address.address %>
       <%= address.name %>
     <% end %>




    </div>
  </div>
</div>