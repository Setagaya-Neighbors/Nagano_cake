<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


     <h4 style="background-color: #d3d3d3; display:inline;">　配送先登録・一覧　</h4>
     <%= form_with model:@new_address, url: public_addresses_path, local:true do |f| %>

     <h4>郵便番号（ハイフンなし）</h4>
     <%= f.text_field :postal_code %>
     <h4>住所</h4>
     <%= f.text_field :address %>
     <h4>宛名</h4>
     <%= f.text_field :name %>

     <span style="margin-left:50px"><%= f.submit '新規登録', class: "btn btn-success" %></span>

     <% end %>


    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">



     <table width="900" height="100" border="1">
			<thead>
				<tr>
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
				</tr>
			</thead>
			<tbody>
  		 <% @addresses.each do |address| %>
				<tr>
					<td><%= address.postal_code %></td>
					<td><%= address.address %></td>
					<td><%= address.name %></td>
					<td>
					  <%= link_to '編集する',edit_public_address_path(address),class: "btn btn-success" %>
					  <%= link_to '削除する',public_address_path(address),method: :delete, data: {confirm:"本当に消しますか？"},class: "btn btn-danger" %>
					</td>
				</tr>
		　	<% end %>
			　</tbody>
	　	</table>



    </div>
  </div>
</div>