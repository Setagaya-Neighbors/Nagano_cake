<p id="notice"></p>

  <div class='container px-3 px-sm-3'>
    <% if @address.errors.any? %>
      <%= @address.errors.count %>error prohibited this obj from being saved:
        <% @address.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
    <% end %>
  </div>

  <div class='container px-3 px-sm-3'>
    <div class='row'>
        <div>


          <h4 style="background-color: #d3d3d3; display:inline;">　配送先編集　</h4>
            <%= form_with model: @address, url: public_address_path(@address.id), local:true do |f| %>
              <br>郵便番号（ハイフンなし）
                <span style="margin-left:50px"><%= f.text_field :postal_code %></span>
              <br>住所
                <span style="margin-left:210px"><%= f.text_field :address %></span>
              <br>宛名
                <span style="margin-left:210px"><%= f.text_field :name %></span>
                <span style="margin-left:50px"><%= f.submit '変更を保存', class: "btn btn-success" %></span>
              </br>
            <% end %>


        </div>
    </div>
  </div>
